<div class="page-header">
  <h1>
    Invites
    <a href="/invites/new" class="btn btn-lg btn-success">New Invite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Activity</th>
        <th>Invitee</th>
        <th>Attend status</th>
        <th>Actions</th>
      </tr>

      <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.activity_id %></td>
        <td><%= invite.invitee_id %></td>
        <td><%= invite.attend_status %></td>
        <td>
          <a href="/invites/<%= invite.id %>" class="btn btn-primary">Show</a>
          <a href="/invites/<%= invite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_invite/<%= invite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
