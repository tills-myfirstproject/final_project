<div class="page-header">
  <h1>
    Your Activity Invites
  </h1>
</div>

<% if @invites.where(attend_status: "No Response").count > 0 %>
  
  <div class="header">
    <h3>
      New Invites
    </h3>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Category</th>
          <th>Activity</th>
          <th>Date</th>
          <th>Meet time</th>
          <th>Cost level</th>
          <th>Attend status</th>
          <th>Actions</th>
        </tr>
  
        <% @new_invites.each do |invite| %>
        <tr>
          <td><img src="
            <%= @categories.find(
              id: @activities.find(
                id: invite.activity_id
                ).category_id
              ).icon 
            %>"
          ></td>
          <td><%= invite.invitee_id %></td>
          <td><%= invite.attend_status %></td>
          <td>
            <a href="/invites/<%= invite.id %>" class="btn btn-primary">Show</a>
            <a href="/invites/<%= invite.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_invite/<%= invite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

<% end %>

<div class="header">
  <h3>
    All Upcoming Invites
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Activity</th>
        <th>Invitee</th>
        <th>Attend status</th>
        <th>Actions</th>
      </tr>

      <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.activity_id %></td>
        <td><%= invite.invitee_id %></td>
        <td><%= invite.attend_status %></td>
        <td>
          <a href="/invites/<%= invite.id %>" class="btn btn-primary">Show</a>
          <a href="/invites/<%= invite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_invite/<%= invite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>