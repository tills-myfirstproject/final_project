<!-- Validation failure messages -->
<% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Category #<%= @category.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_category/<%= @category.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @category.name %>">
      </div>

      <!-- Label and input for icon -->
      <div class="form-group">
        <label for="icon" class="control-label">
          Icon
        </label>

        <input type="text" id="icon" name="icon" placeholder="Icon" class="form-control" value="<%= @category.icon %>">
      </div>

      <button class="btn btn-warning">
        Update Category
      </button>
      or
      <a href="/categories/<%= @category.id %>">Cancel</a>
    </form>
  </div>
</div>
